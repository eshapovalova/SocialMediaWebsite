@using System.Text
@model SocialMedia.Models.ViewModels.PostTagFriendsViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Post</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <!--Post model-->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*--Tagged users--*@
                @if (Model.Tagged.Count > 0)
                {
                    var sb = new StringBuilder();
                    sb.Append(Model.CurrentUser.UserName + "is with");
                    foreach (var user in Model.Tagged)
                    {
                        sb.Append($" {user.UserName},");
                    }
                    var result = sb.ToString().TrimEnd(',');
                    <label>@result</label>
                }
                else
                {
                    <label>@Model.CurrentUser.UserName</label>
                }
                <input asp-for="@Model.Post.Content" class="form-control" />
                <span asp-validation-for="@Model.Post.Content" class="text-danger"></span>
            </div>

            <!--Tag friends-->
            <div>
                <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Tag Friends</button>
                <!-- Modal -->
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog modal-sm">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Friends</h4>
                            </div>
                            <div class="modal-body">
                                <ul>
                                    @if (Model.UserFriends.Count == 0)
                                    {
                                        <li>
                                            @Model.CurrentUser.UserName, you do not have any more friends.
                                        </li>
                                    }
                                    else
                                    {
                                        @foreach (var user in Model.UserFriends)
                                        {
                                            <li>
                                                @Html.ActionLink(user.UserName, "TagFriend", "Posts", new { taggedId = user.Id, viewName = "Create" })
                                            </li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
