@model SocialMedia.Models.User

@{
    ViewData["Title"] = "NonFriendProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Non Friend Profile</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Username:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            Full name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            Nationality:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt>
            <a asp-action="SendRequest" asp-route-id="@Model.Id">Send Request</a>
        </dt>
    </dl>
</div>