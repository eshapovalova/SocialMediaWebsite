@model SocialMedia.Models.ViewModels.GroupViewModel

@{
    ViewData["Title"] = "MyGroups";
}

<h1>My Groups</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Group.Title)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model.MemberGroups)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => group.Title)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", "Groups", new { id = group.GroupId})
                </td>
                @if (group.Message == "admin")
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@group.GroupId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@group.GroupId">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
