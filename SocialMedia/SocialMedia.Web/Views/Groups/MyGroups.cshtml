@model SocialMedia.Models.ViewModels.GroupViewModel

@{
    ViewData["Title"] = "MyGroups";
}

<h1>My Groups</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Group.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MemberGroups)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.GroupId">Details</a>
                </td>
                @if (item.Message == "admin")
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.GroupId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.GroupId">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
