@model IEnumerable<SocialMedia.Models.User>

@{
    ViewData["Title"] = "GroupMembers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Group Members</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                Full name
            </th>
            <th>
                Nationality
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    <a asp-controller="Friendships" asp-action="UserProfile" asp-route-id="@item.Id">View Profile</a>
                </td>
            </tr>
        }
    </tbody>
</table>