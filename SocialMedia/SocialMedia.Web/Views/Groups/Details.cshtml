@model SocialMedia.Models.Group

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Group</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dd class="col-sm-10">
            <!--Sends the group id to PostsController in a GroupPosts method-->
            @Html.ActionLink("Posts", "GroupPosts", "Posts", new { id = Model.GroupId})
        </dd>
        <dd class="col-sm-10">
            <a asp-controller="Groups" asp-action="GroupMembers" asp-route-id="@Model.GroupId">Members</a>
        </dd>
    </dl>
</div>