@model SocialMedia.Services.Comment.CommentServiceModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this comment?</h3>
<div class="container mt-3">
    <div class="media border p-3">
        <div class="media-body">
            <div class="row">
                <div class="col-md-10">
                    <!-- Author and posted date-->
                    <h6>@Model.Author.UserName <small><i>Posted on @Model.DatePosted</i></small></h6>

                    <!-- Tagged users -->
                    @if (Model.TaggedFriends != null)
                    {
                        foreach (var user in Model.TaggedFriends)
                        {
                            <a href="#" class="badge badge-primary">@user.UserName</a>
                        }
                    }
                </div>
            </div>
            <!-- Content -->
            <p>@Model.Content</p>
        </div>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="@Model.CommentId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>
