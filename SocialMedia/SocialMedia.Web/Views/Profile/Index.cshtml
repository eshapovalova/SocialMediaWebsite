@model SocialMedia.Models.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-3">
                <img src="~/img/profile_pic.png" class="rounded" alt="Cinque Terre" width="150" height="150">
            </div>
            <div class="col-md-9">
                <table class="table">
                    <tbody>
                        <tr></tr>
                        <tr>
                            <td><b>@Model.CurrentUser.FullName</b></td>
                            <td><b>@Model.CurrentUser.UserName</b></td>
                        </tr>
                        <tr></tr>
                        <tr>
                            <td>@Model.CurrentUser.Country</td>
                            <td>@Model.CurrentUser.DOB</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<hr class="container" style="height:1px;border-width:0;color:skyblue;background-color:skyblue">

<div class="container">
    <ul class="nav">
        <li class="nav-item col-md-3">
            <button class="nav-link btn btn-outline-primary" href="#"><img src="https://img.icons8.com/ultraviolet/40/000000/about.png" />  About </button>
        </li>
        <li class="nav-item col-md-3">
            <button class="nav-link btn btn-outline-primary" href="#"><img src="https://img.icons8.com/ultraviolet/40/000000/small-icons.png" />  Gallery </button>
        </li>
        <li class="nav-item col-md-3">
            <button class="nav-link btn btn-outline-primary" href="#"><img src="https://img.icons8.com/ultraviolet/40/000000/handshake.png" />  Friends </button>
        </li>
        <li class="nav-item col-md-3">
            <button class="nav-link btn btn-outline-primary" href="#"><img src="https://img.icons8.com/ultraviolet/40/000000/groups.png" />  Groups </button>
        </li>
    </ul>
</div>

<hr class="container" style="height:1px;border-width:0;color:skyblue;background-color:skyblue">

<!-- New post -->
<div class="container mt-3 border p-3">
    <h2>New Post</h2>
    <div class="media border p-3">
        <img src="~/img/profile_pic.png" alt="John Doe" class="mr-3 mt-3 rounded-circle" style="width:60px;">
        <div class="media-body">
            <form>
                <div class="form-group">
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                              placeholder="What is on your mind?"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-primary"><img src="https://img.icons8.com/ultraviolet/40/000000/paper-plane.png" />  Post</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Posts -->
@if (Model.Posts.Count > 0)
{
    foreach (var post in Model.Posts.OrderByDescending(d => d.Post.DatePosted))
    {
        <div class="container">
            <div class="media border p-3">
                <img src="img/profile_pic.png" class="mr-3 mt-3 rounded-circle" style="width:60px;">
                <div class="media-body">

                    @if (post.Post.Group != null)
                    {
                        <h4>@Model.CurrentUser.UserName <small><i>Posted in <b>@post.Post.Group.Title</b> on @post.Post.DatePosted.Date</i></small></h4>

                    }
                    else
                    {
                        <h4>@Model.CurrentUser.UserName <small><i>Posted on @post.Post.DatePosted.Date</i></small></h4>
                    }

                    @if (post.Tagged.Count > 0)
                    {
                        foreach (var user in post.Tagged)
                        {
                            <a href="#" class="badge badge-primary">@user.UserName</a>
                        }
                    }
                    <p>
                        @post.Post.Content
                    </p>

                    <hr class="container" style="height:1px;border-width:0;color:skyblue;background-color:skyblue">

                    <!-- New Comment-->
                    <div class="container">
                        <div class="media">
                            <img src="img/profile_pic.png" alt="John Doe" class="mr-3 mt-3 rounded-circle" style="width:60px;">
                            <div class="media-body">
                                <form>
                                    <div class="form-group">
                                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Drop a comment"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-outline-primary">
                                            <img src="https://img.icons8.com/ultraviolet/40/000000/paper-plane.png" />Comment
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <hr class="container" style="height:1px;border-width:0;color:skyblue;background-color:skyblue">

                    <!-- Comments -->
                    @if (post.Comments.Count > 0)
                    {
                        foreach (var comment in post.Comments)
                        {
                            <div class="container mt-3">
                                <div class="media border p-3">
                                    <img src="img/profile_pic.png" class="mr-3 mt-3 rounded-circle" style="width:60px;">
                                    <div class="media-body">
                                        <!-- Author and posted date-->
                                        <h4>@comment.Comment.Author.UserName <small><i>Posted on @comment.Comment.DatePosted</i></small></h4>

                                        <!-- Tagged users -->
                                        @if (comment.Tagged.Count > 0)
                                        {
                                            foreach (var user in comment.Tagged)
                                            {
                                                <a href="#" class="badge badge-primary">@user.UserName</a>
                                            }
                                        }

                                        <!-- Content -->
                                        <p>@comment.Comment.Content</p>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                </div>
            </div>
        </div>
    }
}